<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/launcher">

    <fragment
        android:id="@+id/launcher"
        android:name="keijumt.githubclient.ui.launcher.LauncherFragment"
        android:label="launcher"
        tools:layout="@layout/fragment_launcher">
        <action
            android:id="@+id/action_launcher_to_signIn"
            app:destination="@id/signIn" />
    </fragment>

    <fragment
        android:id="@+id/signIn"
        android:name="keijumt.githubclient.auth.ui.signin.SignInFragment"
        android:label="signin"
        tools:layout="@layout/fragment_signin" />
</navigation>